<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        header {
            background: white;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        h1 {
            color: #333;
            margin-bottom: 10px;
        }

        .header-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .status {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            color: #666;
        }

        .status-indicator {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #4caf50;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }

        .controls {
            display: flex;
            gap: 10px;
        }

        button {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            background: #667eea;
            color: white;
            cursor: pointer;
            font-size: 14px;
            transition: background 0.3s;
        }

        button:hover {
            background: #764ba2;
        }

        button.secondary {
            background: #999;
        }

        button.secondary:hover {
            background: #777;
        }

        .dashboard {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .card {
            background: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .stat-box {
            text-align: center;
            padding: 20px;
        }

        .stat-number {
            font-size: 32px;
            font-weight: bold;
            color: #667eea;
            margin-bottom: 10px;
        }

        .stat-label {
            color: #666;
            font-size: 14px;
        }

        .logs-section {
            grid-column: 1 / -1;
        }

        .logs-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .logs-header h2 {
            color: #333;
            font-size: 18px;
        }

        .log-level-filter {
            display: flex;
            gap: 8px;
        }

        .filter-btn {
            padding: 6px 12px;
            border: 2px solid #ddd;
            background: white;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.3s;
        }

        .filter-btn.active {
            background: #667eea;
            border-color: #667eea;
            color: white;
        }

        .logs-container {
            background: #1e1e1e;
            border-radius: 8px;
            padding: 15px;
            height: 400px;
            overflow-y: auto;
            font-family: 'Courier New', monospace;
            font-size: 12px;
            color: #d4d4d4;
        }

        .log-entry {
            padding: 8px;
            margin: 4px 0;
            border-left: 3px solid #666;
            background: #252525;
            border-radius: 2px;
            animation: slideIn 0.3s ease-out;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .log-entry.info {
            border-left-color: #4caf50;
            color: #81c784;
        }

        .log-entry.warn {
            border-left-color: #ff9800;
            color: #ffb74d;
        }

        .log-entry.error {
            border-left-color: #f44336;
            color: #ef5350;
        }

        .log-entry.debug {
            border-left-color: #2196f3;
            color: #64b5f6;
        }

        .log-timestamp {
            color: #888;
            font-size: 11px;
        }

        .log-message {
            margin-top: 4px;
            word-break: break-all;
        }

        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #999;
        }

        .logout-btn {
            background: #f44336;
        }

        .logout-btn:hover {
            background: #d32f2f;
        }

        @media (max-width: 768px) {
            .dashboard {
                grid-template-columns: 1fr;
            }

            .header-info {
                flex-direction: column;
            }

            .logs-container {
                height: 300px;
            }
        }

        .connection-status {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: bold;
        }

        .connection-status.connected {
            background: #c8e6c9;
            color: #2e7d32;
        }

        .connection-status.disconnected {
            background: #ffcdd2;
            color: #c62828;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="header-info">
                <div>
                    <h1><%= title %></h1>
                    <p style="color: #999; font-size: 14px;">Real-time system monitoring</p>
                </div>
                <div class="controls">
                    <span class="connection-status connected" id="connectionStatus">ðŸ”— Connected</span>
                    <button class="secondary" onclick="clearLogs()">Clear Logs</button>
                    <a href="/auth/logout" style="text-decoration: none;">
                        <button class="logout-btn">Logout</button>
                    </a>
                </div>
            </div>
        </header>

        <div class="dashboard">
            <!-- Stats Cards -->
            <div class="card stat-box">
                <div class="stat-number" id="infoCount">0</div>
                <div class="stat-label">Info Logs</div>
            </div>
            <div class="card stat-box">
                <div class="stat-number" id="errorCount">0</div>
                <div class="stat-label">Error Logs</div>
            </div>

            <!-- Live Logs Section -->
            <div class="card logs-section">
                <div class="logs-header">
                    <h2>ðŸ“Š Live Logs</h2>
                    <div class="log-level-filter">
                        <button class="filter-btn active" data-level="all" onclick="filterLogs('all')">All</button>
                        <button class="filter-btn" data-level="info" onclick="filterLogs('info')">Info</button>
                        <button class="filter-btn" data-level="warn" onclick="filterLogs('warn')">Warn</button>
                        <button class="filter-btn" data-level="error" onclick="filterLogs('error')">Error</button>
                        <button class="filter-btn" data-level="debug" onclick="filterLogs('debug')">Debug</button>
                    </div>
                </div>
                <div class="logs-container" id="logsContainer">
                    <div class="empty-state">Waiting for logs...</div>
                </div>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        let logs = [];
        let filteredLevel = 'all';
        const MAX_LOGS = 500;

        // Initialize Socket.IO connection
        const socket = io({
            reconnection: true,
            reconnectionDelay: 1000,
            reconnectionDelayMax: 5000,
            reconnectionAttempts: 5
        });

        // Connection events
        socket.on('connect', () => {
            console.log('Connected to server');
            updateConnectionStatus(true);
        });

        socket.on('disconnect', () => {
            console.log('Disconnected from server');
            updateConnectionStatus(false);
        });

        socket.on('connect_error', (error) => {
            console.error('Connection error:', error);
            updateConnectionStatus(false);
        });

        // Log event listener
        socket.on('log', (logData) => {
            addLog(logData);
        });

        function updateConnectionStatus(connected) {
            const status = document.getElementById('connectionStatus');
            if (connected) {
                status.textContent = 'ðŸ”— Connected';
                status.className = 'connection-status connected';
            } else {
                status.textContent = 'âš ï¸ Disconnected';
                status.className = 'connection-status disconnected';
            }
        }

        function addLog(logData) {
            // Extract log information
            const level = logData.level || 'info';
            const timestamp = logData.timestamp || new Date().toLocaleTimeString();
            const message = logData.message || 'No message';
            const service = logData.service || 'unknown';

            // Create log object
            const log = {
                id: Date.now(),
                level: level,
                timestamp: timestamp,
                message: message,
                service: service,
                correlationId: logData.correlationId
            };

            logs.unshift(log);

            // Keep only last MAX_LOGS
            if (logs.length > MAX_LOGS) {
                logs.pop();
            }

            // Update counts
            updateLogCounts();

            // Render logs
            renderLogs();
        }

        function updateLogCounts() {
            const infoCount = logs.filter(l => l.level === 'info').length;
            const errorCount = logs.filter(l => l.level === 'error').length;

            document.getElementById('infoCount').textContent = infoCount;
            document.getElementById('errorCount').textContent = errorCount;
        }

        function renderLogs() {
            const container = document.getElementById('logsContainer');

            // Filter logs
            let filteredLogs = logs;
            if (filteredLevel !== 'all') {
                filteredLogs = logs.filter(log => log.level === filteredLevel);
            }

            if (filteredLogs.length === 0) {
                container.innerHTML = '<div class="empty-state">No logs to display</div>';
                return;
            }

            // Create HTML for logs
            const logsHTML = filteredLogs
                .map(log => `
                    <div class="log-entry ${log.level}">
                        <div>
                            <span class="log-timestamp">[${log.timestamp}]</span>
                            <span style="margin-left: 10px; font-weight: bold;">
                                [${log.level.toUpperCase()}]
                            </span>
                            ${log.correlationId ? `<span style="color: #666; margin-left: 10px;">ID: ${log.correlationId.substring(0, 8)}...</span>` : ''}
                        </div>
                        <div class="log-message">${escapeHtml(log.message)}</div>
                    </div>
                `)
                .join('');

            container.innerHTML = logsHTML;

            // Auto-scroll to bottom
            container.scrollTop = container.scrollHeight;
        }

        function filterLogs(level) {
            filteredLevel = level;

            // Update button states
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-level="${level}"]`).classList.add('active');

            renderLogs();
        }

        function clearLogs() {
            if (confirm('Are you sure you want to clear all logs?')) {
                logs = [];
                updateLogCounts();
                renderLogs();
            }
        }

        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, m => map[m]);
        }

        // Initial render
        renderLogs();
    </script>
</body>
</html>
